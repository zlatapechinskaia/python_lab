students_languages = {
    'Иванов': ['английский', 'французский'],
    'Петров': ['английский', 'испанский'],
    'Сидоров': ['немецкий', 'китайский'],
    'Козлов': ['китайский', 'японский'],
}

all_languages = set()

chinese_speakers = set()

for student, languages in students_languages.items():
    all_languages.update(languages)
    if 'китайский' in languages:
        chinese_speakers.add(student)

print(f"Количество различных языков: {len(all_languages)}")
print("Отсортированный список языков:", sorted(all_languages))

# Выводим список студентов, знающих китайский язык
print("Студенты, знающие китайский язык:", chinese_speakers)
